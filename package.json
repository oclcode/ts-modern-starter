{
  "name": "ts-modern-starter",
  "version": "1.0.0",
  "type": "module",
  "description": "A production-ready TypeScript starter template with ESLint v9 (Flat Config), Jest, and pnpm. Includes ES Modules support, strict typing, and pre-configured testing. Ideal for Node.js apps, libraries, and CLI tools.",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "prepare": "pnpm build"
  },
  "keywords": [
    "typescript",
    "starter",
    "template",
    "eslint",
    "jest",
    "babel",
    "pnpm",
    "esmodules",
    "ts",
    "modern-ts",
    "node"
  ],
  "author": {
    "name": "OCL Code",
    "email": "oclcode@outlook.com",
    "url": "https://github.com/oclcode"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.4.1",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
